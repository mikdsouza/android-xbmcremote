<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoteActivity" tools:deviceIds="wear_square"
    android:orientation="horizontal"
    android:gravity="center">

    <GridLayout
        style="@style/Theme.Wearable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/mute_button"
            android:layout_gravity="center"
            android:onClick="muteButtonOnClick"
            android:contentDescription="mute"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:cropToPadding="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/rewind_button"
            android:layout_gravity="center"
            android:onClick="rewindButtonOnClick"
            android:contentDescription="rewind"
            android:clickable="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/play_button"
            android:clickable="true"
            android:onClick="playButtonOnClick"
            android:contentDescription="play" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/ff_button"
            android:layout_gravity="center"
            android:onClick="ffButtonOnClick"
            android:contentDescription="fastforward"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/prev_button"
            android:layout_gravity="center"
            android:onClick="prevButtonOnClick"
            android:contentDescription="previous"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/stop_button"
            android:layout_gravity="center"
            android:onClick="stopButtonOnClick"
            android:contentDescription="stop"
            android:clickable="true"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/next_button"
            android:layout_gravity="center"
            android:onClick="nextButtonOnClick"
            android:contentDescription="next"
            android:clickable="true" />
    </GridLayout>
</LinearLayout>
