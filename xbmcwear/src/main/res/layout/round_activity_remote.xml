<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".RemoteActivity"
    tools:deviceIds="wear_round">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/Theme.Wearable"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mute"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/mute_button"
            android:layout_gravity="center"
            android:onClick="muteButtonOnClick"
            android:contentDescription="mute"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:cropToPadding="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rewindButton"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/rewind_button"
            android:layout_gravity="center"
            android:onClick="rewindButtonOnClick"
            android:contentDescription="rewind"
            android:clickable="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playButton"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/play_button"
            android:clickable="true"
            android:onClick="playButtonOnClick"
            android:contentDescription="play" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ffButton"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/ff_button"
            android:layout_gravity="center"
            android:onClick="ffButtonOnClick"
            android:contentDescription="fastforward"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevButton"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/prev_button"
            android:layout_gravity="center"
            android:onClick="prevButtonOnClick"
            android:contentDescription="previous"
            android:clickable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/stop_button"
            android:layout_gravity="center"
            android:onClick="stopButtonOnClick"
            android:contentDescription="stop"
            android:clickable="true"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/next_button"
            android:layout_gravity="center"
            android:onClick="nextButtonOnClick"
            android:contentDescription="next"
            android:clickable="true" />

    </GridLayout>
</RelativeLayout>
